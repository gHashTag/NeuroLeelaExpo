{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"],
			"@core/*": ["core/*"],
			"@components/*": ["./components/*"],
			"@hooks/*": ["./hooks/*"],
			"@utils/*": ["./utils/*"],
			"@config/*": ["./config/*"],
			"@styles/*": ["./styles/*"],
			"@constants/*": ["./constants/*"],
			"@types/*": ["./types/*"],
		},
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		".expo/types/**/*.ts",
		"expo-env.d.ts",
		"nativewind-env.d.ts"
	]
}
